                    android:layout_marginTop="13dp"
                    android:layout_marginStart="14dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            <TextView
                    android:id="@+id/dest_location"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
