<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".CameraActivity"
                                                   android:background="@color/dark_mode_background">
    <TextView
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="@id/backward"
            app:layout_constraintStart_toEndOf="@id/backward"
            android:layout_marginStart="106dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 업로드"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="20dp"
            android:textFontWeight="600"
            android:textColor="#FFFFFF"
    />



    <View
            android:id="@+id/upload_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="234dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_12_main_color_rectangle"
            android:layout_marginStart="10dp"
    />

    <TextView
            app:layout_constraintTop_toTopOf="@id/upload_btn"
            app:layout_constraintStart_toStartOf="@id/upload_btn"
            android:layout_marginStart="75dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업로드하기"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="20dp"
            android:textFontWeight="600"
            android:textColor="#FFFFFF"
    />



</androidx.constraintlayout.widget.ConstraintLayout>
